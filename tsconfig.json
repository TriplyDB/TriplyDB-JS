{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es6", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,

    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "removeComments": true,
    "rootDir": "./src",
    "sourceMap": true,
    "listFiles": false,
    "outDir": "./lib",
    "experimentalDecorators": true,
    "types": ["mocha"]
  },
  "compileOnSave": true,
  "include": [".eslintrc.js","src/**/**/*.ts"],
  "exclude": [
    "**/*.d.ts"
]
}
